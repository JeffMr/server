<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Link para o Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Link para o arquivo styles.css -->
    <link rel="stylesheet" href="styles.css">
<style>
body {
    margin-top: 35px;
    background-color: #f8f9fa; /* Cor de fundo suave */
    font-family: Arial, sans-serif; /* Fonte padrão */
}

.container {
    max-width: 400px; /* Largura máxima do contêiner */
    margin: 0 auto; /* Centralizar o contêiner na página */
    padding: 40px; /* Espaçamento interno */
    background-color: #fff; /* Cor de fundo do contêiner */
    border-radius: 30px; /* Cantos arredondados */
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
}

h1 {
    text-align: center; /* Centralizar o título */
    margin-bottom: 30px; /* Espaçamento inferior */
    color: #333; /* Cor do texto */
}

.form-group {
    margin-bottom: 20px; /* Espaçamento inferior */
}

label {
    font-weight: bold; /* Texto em negrito */
    color: #555; /* Cor do texto */
}

input.form-control {
    border: 1px solid #ced4da; /* Borda */
    border-radius: 4px; /* Cantos arredondados */
}

button.btn-primary {
    background-color: #007bff; /* Cor de fundo */
    border: none; /* Sem borda */
    border-radius: 4px; /* Cantos arredondados */
    padding: 10px 20px; /* Espaçamento interno */
}

button.btn-primary:hover {
    background-color: #0056b3; /* Cor de fundo ao passar o mouse */
}

a.btn-link {
    color: #007bff; /* Cor do link */
    text-decoration: none; /* Sem sublinhado */
}

a.btn-link:hover {
    text-decoration: underline; /* Sublinhado ao passar o mouse */
}
</style>
</head>
<body>
    <div class="container">
        <h1>Dashboard</h1>
   	<p>Bem-vindo, <%= user.NAME %>!</p>
    	<p>Email: <%= user.EMAIL %></p>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informações do Usuário</h5>
                <p class="card-text">Nome: <span id="userName"><%= user.NAME %></span></p>
                <p class="card-text">Email: <span id="userEmail"><%= user.EMAIL %></span></p>
                <p class="card-text">Telefone: <span id="userPhone"><%= user.PHONE %></span></p>
            </div>
        </div>
    </div>
    <!-- Botão de sair -->
    <a href="/logout" class="btn btn-primary">Sair</a>

    <script>
        // Recuperar informações do usuário do servidor
        fetch('/userInfo')
            .then(response => response.json())
            .then(user => {
                document.getElementById('userName').textContent = user.NAME;
                document.getElementById('userEmail').textContent = user.EMAIL;
                document.getElementById('userPhone').textContent = user.PHONE;
            })
            .catch(error => console.error('Error fetching user info:', error));
    </script>
</body>
</html>
